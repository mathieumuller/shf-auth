                <div class="panel-body padding-top-0">

                    <div class="margin-bottom text-center">
                        <a class="btn btn-primary w100p" href="{{ cas_login_url}}&amp;service={{ url('login_check', {}) }}">{{ 'action.log_in'|trans }}</a>
